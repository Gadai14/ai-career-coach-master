{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",                        // ✅ Add this
    "paths": {
      "@/*": ["./*"]                       // ✅ Add this (or "./src/*" if you're using a src folder)
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/(main)/career-path/_components/LandingPage.jsx",
    "app/(main)/career-path/_components/ProfessionalForm.jsx",
    "app/(main)/career-path/_components/ResourcesPage.jsx",
    "app/(main)/career-path/_components/StudentForm.jsx"
  ],
  "exclude": ["node_modules"]
}
